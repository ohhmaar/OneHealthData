= simple_form_for @patient, html: { multipart: true } do |f|
	- if @patient.errors.any?
		#errors
			%h2
				= pluralize(@patient.errors.count, "error")
				prevented this Pin from saving
			%ul
				- @patient.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.input :document, input_html: { class: 'form-control' }

	.form-group
		= f.input :image, input_html: { class: 'form-control' }

	.form-group
		= f.input :name, input_html: { class: 'form-control' }

	.form-group
		= f.input :insurance, input_html: { class: 'form-control' }

	.form-group
		= f.input :age, input_html: { class: 'form-control' }

	.form-group
		= f.input :address, input_html: { class: 'form-control' }

	.form-group
		= f.input :height, input_html: { class: 'form-control' }
	.form-group
		= f.input :weight, input_html: { class: 'form-control' }
	.form-group
		= f.input :bmi, input_html: { class: 'form-control' }
	.form-group
		= f.input :body_fat, input_html: { class: 'form-control' }
	.form-group
		= f.input :waist_circumference, input_html: { class: 'form-control' }
	.form-group
		= f.input :history, input_html: { class: 'form-control' }
	.form-group
		= f.input :notes, input_html: { class: 'form-control' }

	= f.button :submit, class: "btn btn-primary"