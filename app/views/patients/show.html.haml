.panel.panel-default
		= image_tag @patient.image.url(:thumb)
		%br/
		%h1= @patient.name
		%p= @patient.insurance
		%p= @patient.address
		= link_to 'Document', @patient.document.url
		%br/
		Created by
		= @patient.user.email
		%br/

		= link_to "Back", root_path
		= link_to "Edit", edit_patient_path
		= link_to "Delete", patient_path, method: :delete, data: { confirm: "Are you sure"}
		.container
				.row
						.col-md-4
								%h1= "Age"
								%p= @patient.age
						.col-md-4
								%h1= "Height(ft)"
								%p= @patient.height
						.col-md-4
								%h1= "Weight(lbs)"
								%p= @patient.weight
				.row
						.col-md-4
								%h1= "BMI"
								%p= @patient.bmi
						.col-md-4
								%h1= "Body Fat(%)"
								%p= @patient.body_fat
						.col-md-4
								%h1= "Waist Circumference(in)"
								%p= @patient.waist_circumference
				.row
						.col-md-6
								%h1= "Health History/Medication"
								%p= @patient.history
						.col-md-6
								%h1= "Notes"
								%p= @patient.notes